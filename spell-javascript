const cards = document.querySelectorAll('.memory-card');
let vanskeligsGrad = document.querySelector(".vanskeligsGrad");

let hasFlippedCard = false;
let lockBoard = false;
let firstCard, secondCard;
let poeng = 0;
let kortParBorte = 0;
let startMeny = document.getElementById("start");
let sluttMeny = document.getElementById("slutt");
let sek = 0;
let min = sek/60;

function flipCard() {
  if (lockBoard) return;
  if (this === firstCard) return;

  

  this.classList.add('flip');

  if (!hasFlippedCard) {
    hasFlippedCard = true;
    firstCard = this;
    
    return; 
  }

  secondCard = this;
  checkForMatch();
}

function checkForMatch() {
  let isMatch = firstCard.dataset.framework === secondCard.dataset.framework;

  isMatch ? disableCards() : unflipCards();
}

function disableCards() {
 /* firstCard.removeEventListener('click', flipCard);
  secondCard.removeEventListener('click', flipCard); */

  
  firstCard.style.display = "none"
  secondCard.style.display = "none"


  
  kortParBorte++;

  console.log(kortParBorte);
  if(kortParBorte==8){
    
    sluttMeny.style.display = "block";

    document.querySelector(".scoreboard").style.display = "none";
  }

  resetBoard();
}

function unflipCards() {
  lockBoard = true;

  setTimeout(() => {
    firstCard.classList.remove('flip');
    secondCard.classList.remove('flip');

    resetBoard();
  }, 1500);
}

function resetBoard() {
  [hasFlippedCard, lockBoard] = [false, false];
  [firstCard, secondCard] = [null, null];
}

(function shuffle() {
  cards.forEach(card => {
    let randomPos = Math.floor(Math.random() * 12);
    card.style.order = randomPos;
  });
})();

cards.forEach(card => card.addEventListener('click', flipCard));

function forsvinn(){

  let memory_game = document.getElementById("memory-game");

  startMeny.style.display = "none";
  memory_game.style.display = "flex";
  document.querySelector(".scoreboard").style.display = "block";
  console.log("hva er galt");

  let tid = setInterval(()=>{
    sek++;
  
    document.getElementById("poeng").innerHTML = "Poeng: "+kortParBorte;
    document.getElementById("tid").innerHTML = "Tiden: "+ sek;
  
    console.log(sek);
  
  },1000);
  
}

function gjenta(){
  cards.forEach(card =>{
    card.style.display = "block"
    let randomPos = Math.floor(Math.random() * 12);
    card.style.order = randomPos;
    card.classList.remove('flip');
    card.classList.remove('flip');
  });
  sluttMeny.style.display = "none";
  document.querySelector(".scoreboard").style.display = "block";
  kortParBorte = 0;
  sek = 0
  

  console.log("OM DET FUNKA");
}



